dmv (){
  if [[ "${2: -1}" == '/' ]]; then
    if [[ ! -d "${2/\/$(basename "${2}")}" ]]; then
      mkdir -p "${2/\/$(basename "${2}")}"
    fi
  else
    if [[ "${2}" == */* ]]; then
      if [[ ! -d "${2/\/$(basename "${2}")}" ]]; then
        mkdir -p "${2/\/$(basename "${2}")}"
      fi
    fi
  fi
  mv "${1}" "${2}"
}
dcp (){
  if [[ "${2: -1}" == '/' ]]; then
    if [[ ! -d "${2/\/$(basename "${2}")}" ]]; then
      mkdir -p "${2/\/$(basename "${2}")}"
    fi
    else
      if [[ "${2}" == */* ]]; then
        if [[ ! -d "${2/\/$(basename "${2}")}" ]]; then
          mkdir -p "${2/\/$(basename "${2}")}"
        fi
      fi
  fi
  cp -r "${1}" "${2}"
}

